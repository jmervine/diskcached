source :rubygems

group :development, :test do
  gem 'rake'
end

group :development do
  gem 'rdoc'
end

group :benchmark do
  # for benchmark only
  # requires sudo apt-get install libsasl2-dev
  gem 'memcached'
end

group :test do
  gem 'rspec'
  gem 'simplecov', :require => false
  gem 'json'
end

